apiVersion: v1
kind: Secret
metadata:
  name: {{ secret_name }}
  namespace: {{ namespace }}
  labels:
    app: linkedin-bot
    session-id: {{ session_id }}
    user-id: {{ user_id }}
  annotations:
    description: "LinkedIn bot credentials"
    created-by: "Admin Bot System"
type: Opaque
stringData:
  credentials.json: |
    {
      "email": "{{ linkedin_email }}",
      "password": "{{ linkedin_password }}"
    }
  api-key: "{{ api_key }}"
  linkedin-email: "{{ linkedin_email }}"
  linkedin-password: "{{ linkedin_password }}"
  webhook-token: "{{ webhook_token | default('sdfghjkllkjhgfdsdfghjkloir') }}"
  {% if additional_secrets %}
  {% for key, value in additional_secrets.items() %}
  {{ key }}: "{{ value }}"
  {% endfor %}
  {% endif %} 